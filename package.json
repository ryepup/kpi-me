{
  "name": "kpi-me",
  "version": "0.0.0",
  "description": "app to track personal KPIs",
  "main": "src/entry.js",
  "scripts": {
    "test": "exit 1",
    "build": "browserify src/entry.js -d -o build/bundle.js",
    "watch:build": "watchify src/entry.js -d -o build/bundle.js",
    "watch:html": "watch 'cp src/index.html build/' src/",
    "watch": "parallelshell 'npm run watch:build -s' 'npm run watch:html -s'",
    "serve": "parallelshell 'npm run serve:html -s' 'npm run serve:livereload -s'",
    "serve:html": "http-server -p 3000 build/",
    "serve:livereload": "live-reload --port 9091 build/",
    "start": "parallelshell 'npm run watch -s' 'npm run serve -s'"
  },
  "browserify": {
    "transform": [
      "reactify",
      "cssify"
    ]
  },
  "author": "Ryan Davis <ryepup@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^10.2.4",
    "cssify": "^0.7.0",
    "http-server": "^0.8.0",
    "live-reload": "^1.1.0",
    "parallelshell": "^1.2.0",
    "react": "^0.13.3",
    "react-bootstrap": "^0.24.4",
    "react-d3": "^0.3.1",
    "react-tools": "^0.13.3",
    "reactify": "^1.1.1",
    "watch": "^0.16.0",
    "watchify": "^3.3.1"
  }
}
